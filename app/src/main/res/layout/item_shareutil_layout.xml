<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <LinearLayout
            android:id="@+id/wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/weixin3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="13.5dp"
                android:text="微信"
                android:textColor="#4D4D4D"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wechatmoments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pengyouquan"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/share_pengyou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="13.5dp"
                android:text="朋友圈"
                android:textColor="#4D4D4D"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qqkongjian"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/qq3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="13.5dp"
                android:text="QQ"
                android:textColor="#4D4D4D"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <LinearLayout
            android:id="@+id/weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_weibo"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/weibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="13.5dp"
                android:text="微博"
                android:textColor="#4D4D4D"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/duanxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_duanxin"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/duanxin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="13.5dp"
                android:text="短信"
                android:textColor="#4D4D4D"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/youxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_youxiang"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/youxiang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="13.5dp"
                android:text="邮箱"
                android:textColor="#4D4D4D"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
