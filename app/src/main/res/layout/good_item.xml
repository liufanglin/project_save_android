<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ededec"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginRight="3dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/hot"
            android:layout_width="15dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/rexiao2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/text_balck_twen"
                    android:text="促销品名:"/>

                <TextView
                    android:id="@+id/name"
                    style="@style/text_balck_glay"
                    android:ellipsize="end"
                    android:maxEms="7"
                    android:text="商品名称"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dianzan"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:visibility="gone"
                    android:background="@mipmap/sharp" />

                <TextView
                    android:id="@+id/dainzan_number"
                    android:layout_marginLeft="5dp"
                    android:text="赞 0"
                    style="@style/text_ten_glay"
                    />

                <ImageView
                    android:id="@+id/colck"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:background="@mipmap/clock" />

                <TextView
                    android:id="@+id/clock_number"
                    android:layout_marginLeft="5dp"
                    android:text="评论0"
                    style="@style/text_ten_glay"
                    />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/share" />

                <TextView
                    android:id="@+id/share_number"
                    android:layout_marginLeft="5dp"
                    android:text="分享 0"
                    style="@style/text_ten_glay"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/zhekou"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:text="捆绑"
                android:visibility="gone"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middle" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_balck_twen"
                android:text="促销商家:"/>

            <TextView
                android:id="@+id/shop_name"
                android:ellipsize="end"
                style="@style/text_balck_glay"
                android:layout_marginLeft="5dp"
                android:maxEms="8"
                android:maxLines="1"
                android:text="店铺名"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                style="@style/text_balck_twen"
                android:text="促销地点:"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/marker2" />

            <TextView
                android:id="@+id/location"
                style="@style/text_balck_glay"
                android:layout_marginLeft="10dp"
                android:text="南京东路"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                style="@style/text_balck_twen"
                android:text="促销日期:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="始"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:background="@drawable/time_end_bg"/>

            <TextView
                android:id="@+id/statr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2010-10"
                android:textSize="@dimen/smart" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="终"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:background="@drawable/time_end_bg"/>

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="2018-10"
                android:textSize="@dimen/smart" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:text="10.00"
                    android:singleLine="true"
                    android:textColor="@color/mianColor"
                    android:textSize="@dimen/login_regin_text" />

                <TextView
                    android:id="@+id/high_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:text="20.00"
                    android:singleLine="true"
                    android:textSize="@dimen/smart" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sales_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="销量: 0 件"
                    android:textSize="@dimen/smart" />

            </LinearLayout>

            <TextView
                android:id="@+id/dazhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/biaoqian2"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/ll_left"
                android:textSize="@dimen/smart" />
        </RelativeLayout>



    </LinearLayout>

</LinearLayout>
