<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- FlowView -->
    <declare-styleable name="FlowView">
        <attr name="pagerMarginWidth" format="dimension" />
        <attr name="pagerMarginColor" format="reference|color" />
    </declare-styleable>

    <!-- 自定义控件属性 -->
    <declare-styleable name="RoundImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ItemWithoutIcon">
        <attr name="head" format="string" />
        <attr name="content" format="string" />
    </declare-styleable>


    <declare-styleable name="form_unit">
        <attr name="titleleft" format="string"></attr>
        <attr name="text" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="wheelview">
        <attr name="gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="textSize" format="dimension"/>
        <attr name="textColorOut" format="color"/>
        <attr name="textColorCenter" format="color"/>
        <attr name="dividerColor" format="color"/>
    </declare-styleable>


</resources>
