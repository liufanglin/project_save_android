<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/none</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="text_nomal_darklight">
        <item name="android:textColor">@color/cc_text_darklight</item>
        <item name="android:textSize">@dimen/text_nomal</item>
    </style>

    <style name="text_nomal_orage">
        <item name="android:textColor">@color/cc_orage</item>
        <item name="android:textSize">@dimen/text_nomal</item>
    </style>


    <style name="text_nomal_blank">
        <item name="android:textColor">@color/cc_text_blank</item>
        <item name="android:textSize">@dimen/text_nomal</item>
    </style>

    <style name="NativeDialog" parent="@style/MyDialog"></style>

    <style name="text_balck_twen">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_balck_fourteen">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_balck_glay">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_fourteen_glay">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_ten_glay">
        <item name="android:textSize">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 分隔线 -->
    <style name="NCLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <style name="NCTENLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/line_color</item>
    </style>

</resources>
